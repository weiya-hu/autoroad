/* pages/message/messagedet/messsagedet.wxss */
.title{font-size: 36rpx;font-weight: bold;text-align: center;width: 100%;padding: 30rpx;box-sizing: border-box;}
.messagexx{font-size: 26rpx;padding: 0 20rpx;}
.messagexx view{color: #777;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;flex: 1}
.messageimg{width: 30%;margin: 0 1% 15rpx;overflow:hidden;}
.time{text-align: right}
.content{font-size: 30rpx;color: #777;text-align: justify;padding: 20rpx;}
.width{width: 100%;}
.height{height: 100% !important;min-width:150rpx;}
.imgpre{display: flex;justify-content: flex-start;align-items: center;align-content: center;padding: 0 20rpx;box-sizing: border-box;flex-wrap: wrap}
.address{color: #777;font-size: 26rpx;text-align: left;margin: 10rpx 0 0;padding-left: 20rpx;}
.messagetype1{position: fixed;top: 0rpx;left: 0rpx;}
.messagetypetxt{font-size: 20rpx;position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%);width: 100%;text-align: center;color: white;}
.messagetypeimg{width: 110rpx;}
.date view{font-size: 26rpx;color: #777;padding-left: 20rpx;}