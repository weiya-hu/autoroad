/* pages/message/message.wxss */
.messageitem{width: 100%;height: 120rpx;background: #ffffff;border-bottom: 1rpx solid #e1e3e5;
  font-size: 30rpx;padding: 0 20rpx 0 0;box-sizing: border-box;position: relative;}
.wd{width: 6%;}
.wd view{width: 20rpx;height: 20rpx;background: #008aff;border-radius: 50%;}
.messagetxt{overflow: hidden;text-overflow:ellipsis;white-space: nowrap;font-size: 32rpx;width: 82%;}
.messagetxtpre{width: 100%;}
.float{position: fixed;bottom: 40rpx;right: 40rpx;}
.alld,.backtop{width: 120rpx;height: 120rpx;border-radius: 50%;background: rgba(0, 138, 255, 0.8);
 text-align: center;}
.alld view,.backtop view{color: #ffffff;font-size: 28rpx;font-weight: bold;}
.backtop{margin-top: 20rpx;}
.messagemst{display: flex;flex-direction: column;justify-content: flex-start;align-content: center;width:94%}
.messagexx{font-size: 22rpx;margin-top: 10rpx;}
.messagexx view{color: #666;overflow: hidden;text-overflow:ellipsis;white-space: nowrap;flex: 1}
.messagetype{position: absolute;top: 20rpx;right: 20rpx;}
.messagetypetxt{font-size: 20rpx;position: absolute;top: 50%;left: 50%;transform: translateX(-50%) translateY(-50%);width: 100%;text-align: center;color: white;}
.messagetypeimg{width: 110rpx;}
.time{text-align: right}
.nodata{font-size:26rpx;text-align: center;padding: 15rpx 0;margin: 0 auto;border-bottom: 1px solid #e1e3e5;letter-spacing: 4rpx;
  color: #666}
.items{position:relative;}
.delete{overflow: hidden;position: absolute;left:100%;height:100%;top:0;color:#fff;line-height:120rpx;
    text-align:center;z-index:9;}
  